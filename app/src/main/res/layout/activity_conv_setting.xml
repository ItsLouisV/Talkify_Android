<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".ui.ConvSettingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C1C1E">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back"
                    app:tint="@android:color/white"
                    android:paddingHorizontal="16dp"
                    android:contentDescription="back"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tùy chọn"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivConversationAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/avatar_placeholder"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageStyle"/>

                <TextView
                    android:id="@+id/tvConversationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Tên nhóm hoặc người dùng"/>

                <TextView
                    android:id="@+id/tvMemberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="10 thành viên"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_ios_group"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutMute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mute"
                        app:tint="@android:color/white"
                        android:contentDescription="mute"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:text="Tắt thông báo"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3A3A3C"/>

                <LinearLayout
                    android:id="@+id/layoutViewMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_gallery"
                        app:tint="@android:color/white"
                        android:contentDescription="media"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:text="Phương tiện, file và liên kết"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_right"
                        app:tint="@android:color/darker_gray"
                        android:contentDescription="right"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/groupOptionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_ios_group"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/layoutViewMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_group" app:tint="@android:color/white"
                        android:contentDescription="members"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Thành viên nhóm"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_right" app:tint="@android:color/darker_gray"
                        android:contentDescription="right"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#3A3A3C"/>

                <LinearLayout
                    android:id="@+id/layoutAddMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_user_add" app:tint="@android:color/white"
                        android:contentDescription="add user"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Thêm thành viên"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnLeaveGroup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:text="Rời nhóm"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_red"
                android:visibility="gone"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btnBlockUser"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Chặn người này"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_red"
                android:visibility="gone"
                app:backgroundTint="@null"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>