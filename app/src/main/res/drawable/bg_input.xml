<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền mờ tối -->
    <solid android:color="#222222" />

    <!-- Viền trắng nhẹ -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />

    <!-- Bo góc tròn -->
    <corners android:radius="10dp" />

    <!-- Padding trong ô -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
