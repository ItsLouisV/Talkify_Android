<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền (đen mờ kiểu liquid glass) -->
    <solid android:color="#191919" />

    <!-- Bo góc -->
    <corners android:radius="24dp" />

    <!-- (Tuỳ chọn) Viền mờ sáng nhẹ nếu muốn hiệu ứng “liquid” -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />

    <!-- (Tuỳ chọn) Padding trong để nội dung không sát mép -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="0dp" />
</shape>
